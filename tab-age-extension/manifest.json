{
  "manifest_version": 3,
  "name": "PJ Tab Age Grouper",
  "version": "1.0",
  "description": "Automatically organizes inactive tabs into color-coded groups based on how long they've been idle.",
  "permissions": [
    "tabs",
    "alarms",
    "tabGroups",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/logo16.png",
      "48": "icons/logo48.png",
      "128": "icons/logo128.png"
    }
  },
  "icons": {
    "16": "icons/logo16.png",
    "48": "icons/logo48.png",
    "128": "icons/logo128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
